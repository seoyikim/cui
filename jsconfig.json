{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "ui-core": ["./packages/ui-core/src"],
      "ui-docs": ["./packages/ui-docs"],
      "@components/*": ["./packages/ui-core/src/components/*"],
      "@styles/*": ["./packages/ui-core/src/styles/*"],
      "@utils/*": ["./packages/ui-core/src/utils/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["packages/**/*", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", ".next", "out"]
}
